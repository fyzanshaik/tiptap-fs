{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}